<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.proyecto.ubicua.apecapp.LoginActivity"
    android:background="@mipmap/backgorund_blue">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/topBar"
            android:weightSum="1">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:background="#00ffffff"
                android:src="@drawable/arrowback"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:baselineAligned="true"
            android:id="@+id/loginInputHolder">

            <ImageView
                android:layout_width="222dp"
                android:layout_height="120dp"
                android:id="@+id/logoApec"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_apec"
                android:foregroundGravity="fill_horizontal"
                android:layout_weight="0.21" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/etUsuario"
                android:layout_marginTop="35dp"
                android:hint="Usuario"
                android:gravity="center_horizontal"
                android:elegantTextHeight="true"
                android:editable="true"
                android:fontFamily="@string/abc_action_bar_home_description"
                android:textStyle="bold"
                android:allowUndo="false"
                android:textColorHint="#ffffff"
                android:layout_weight="0.54" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etPassword"
                android:layout_gravity="center_horizontal"
                android:hint="ContraseÃ±a"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:password="false"
                android:fontFamily="@string/abc_action_bar_home_description"
                android:textColorHint="#ffffff"
                android:layout_weight="0.73" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@drawable/login"
            android:scaleType="fitXY"
            android:background="#00ffffff"
            android:onClick="LoginOnClic" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/loginButtonHolder"
            android:layout_marginTop="30dp">

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

